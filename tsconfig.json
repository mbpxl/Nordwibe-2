{
  "compilerOptions": {
    "incremental": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "./build",
    "allowJs": true,
    "sourceMap": true,
    "target": "es6",
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
}
